#!/bin/sh

set -eux

sum=87f6ed723c00cb5f7f894af9dad420acee2bde8d77e128dbc146040856358c6f
url=https://github.com/goreleaser/goreleaser/releases/download/v0.37.10/goreleaser_Linux_x86_64.tar.gz

tmp=$(mktemp -d)
trap "rm -rf $tmp" EXIT
f="$tmp/tgz"

get-and-check "$url" "$f" "$sum"
tar xzf "$f" -C "$tmp"
mv "$tmp/goreleaser" "$1"
chmod a+x "$1"

#!/bin/sh

set -eu

sum="ac595c2239b9a30e0e0744578afa6b73e32cdd8ae61d4f1c0ee5d6b55adbadcf"
url="https://github.com/mattgreen/watchexec/releases/download/1.8.6/watchexec-1.8.6-x86_64-unknown-linux-gnu.tar.gz"

tmp=$(mktemp -d)
trap "rm -rf $tmp" EXIT
f="$tmp/tgz"
get-and-check "$url" "$f" "$sum"
tar -xzf "$f" --strip-components=1 -C "$tmp"
mv "$tmp/$2" "$1"


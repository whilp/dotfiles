#!/bin/sh

set -eux

v="0.10.2"
f="glide-${v}-linux-amd64.tar.gz"
sum="0eedb7f47ff4d184ab334f8dd8be843f8e98774b6ccd92cbe71a6e6c7a3d5da8"
url="https://github.com/Masterminds/glide/releases/download/$v/$f"
tmp=$(mktemp -dp .)
(
    cd "$tmp"
    curl -sLo "$f" "$url"
    echo "$sum *$f" | sha256sum -c -
    tar xzf "$f" --strip-components=1
    mv glide "$1"
    chmod a+x "$1"
)
rm -rf "$tmp"

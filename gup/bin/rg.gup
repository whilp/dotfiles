#!/bin/sh

set -eux

sum="ac595c2239b9a30e0e0744578afa6b73e32cdd8ae61d4f1c0ee5d6b55adbadcf"
url="https://github.com/BurntSushi/ripgrep/releases/download/0.7.1/ripgrep-0.7.1-x86_64-unknown-linux-musl.tar.gz"

tmp=$(mktemp -d)
trap "rm -rf $tmp" EXIT
f="$tmp/rg.tgz"
mkdir "$tmp/out"
get-and-check "$url" "$f" "$sum"
tar xzf "$f" --strip=1 -C "$tmp/out"
mv "$tmp/out/rg" "$1"
